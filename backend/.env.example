# Refinery Backend Configuration
# Copy to .env and fill in your values

# Database
DATABASE_URL=postgresql+asyncpg://refinery:refinery@localhost:5432/refinery
DATABASE_SYNC_URL=postgresql://refinery:refinery@localhost:5432/refinery

# Redis (for caching and task queue)
REDIS_URL=redis://localhost:6379/0

# Authentication
SECRET_KEY=change-me-to-a-real-secret-key-in-production

# Claude API (required for manuscript analysis)
ANTHROPIC_API_KEY=sk-ant-your-key-here
CLAUDE_MODEL=claude-sonnet-4-5-20250929

# Stripe (set when you have a Stripe account)
STRIPE_SECRET_KEY=sk_test_your_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_secret_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_key_here

# Debug mode
DEBUG=false
